<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".presenter.auth.register.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            app:elevation="4dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Criar conta"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:paddingVertical="16dp"
           android:orientation="vertical"
           android:paddingHorizontal="24dp" >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/color_default"
               android:text="Nome"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

           <EditText
               android:id="@+id/edit_nome"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/bg_edit_arround"
               android:drawableStart="@drawable/ic_user_line"
               android:drawablePadding="8dp"
               android:drawableTint="@color/color_default"
               android:hint="Digite seu nome"
               android:padding="14dp"
               android:textColorHint="@color/color_hint" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/color_default"
               android:text="Email"
               android:layout_marginTop="16dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

           <EditText
               android:id="@+id/edit_email"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/bg_edit_arround"
               android:drawableStart="@drawable/ic_mail_line"
               android:drawablePadding="8dp"
               android:drawableTint="@color/color_default"
               android:hint="Digite seu email"
               android:padding="14dp"
               android:textColorHint="@color/color_hint" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/color_default"
               android:text="Telefone"
               android:layout_marginTop="16dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

           <EditText
               android:id="@+id/edit_telefone"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/bg_edit_arround"
               android:drawableStart="@drawable/ic_phone_line"
               android:drawablePadding="8dp"
               android:drawableTint="@color/color_default"
               android:hint="Digite seu telefone"
               android:padding="14dp"
               android:textColorHint="@color/color_hint" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/color_default"
               android:text="Senha"
               android:layout_marginTop="16dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/appBarLayout" />

           <EditText
               android:id="@+id/edit_senha"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/bg_edit_arround"
               android:drawableStart="@drawable/ic_lock_password_line"
               android:drawablePadding="8dp"
               android:drawableTint="@color/color_default"
               android:hint="Digite uma senha"
               android:padding="14dp"
               android:textColorHint="@color/color_hint" />


           <com.google.android.material.button.MaterialButton
               android:id="@+id/btnLogin"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:background="@drawable/bt_login"
               android:text="Criar conta"
               app:backgroundTint="@null"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

           <ProgressBar
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="16dp"
               android:layout_marginBottom="24dp"
               android:indeterminateTint="@color/color_default"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.498"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/btnLogin"
               app:layout_constraintVertical_bias="0.039" />
       </LinearLayout>

    </LinearLayout>

</ScrollView>